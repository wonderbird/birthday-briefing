{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "vitest",
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "json"
  ],
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!src/test/**"
  ],
  "ignorePatterns": [
    "node_modules",
    "dist",
    "coverage",
    "*.config.js",
    ".cursor",
    ".git"
  ]
}

